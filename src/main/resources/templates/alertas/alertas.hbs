{{#partial "tittle"}}
    Alertas
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/list.css"/>
    <link rel="stylesheet" href="/css/alertas/alertas.css"/>
{{/partial}}
{{#partial "scripts"}}
{{/partial}}
{{#partial "main-content"}}
    <div class="list-container">
        <h2 class="list-title">Visulizar Alertas</h2>

        <!--me parece que tendrian que aparecer solo las alertas del colaborador en cuestion-->
        <div class="scrollable">
            <ul class="list">
                {{#each incidentes}}
                    <li class="list-item">
                        <a href="#" class="item-card">
                            <h3 class="card-title">{{this.tipo}}</h3>
                            <img src="{{this.foto.url}}" alt="Imagen del incidente"
                                 class="card-image">
                            <div class="card-details">
                                <p>
                                    <span class="material-symbols-rounded card-detail-icon">today</span>
                                    Fecha: {{this.fechaHora}}
                                </p>
                                <p>Heladera: {{this.heladera.nombre}}</p>
                                <p>Colaborador: {{this.colaborador.nombre}}</p>
                                <p>{{this.descripcion}}</p>
                            </div>
                        </a>
                    </li>
                {{/each}}
                <li class="list-item">
                    <a href="#" class="item-card">
                        <h3 class="card-title">Falla de Temperatura</h3>
                        <img src="https://example.com/imagen_incidente.jpg"
                             alt="Imagen del incidente" class="card-image">
                        <div class="card-details">
                            <p>
                                <span class="material-symbols-rounded card-detail-icon">today</span>
                                Fecha: 2024-10-15 10:30
                            </p>
                            <p>Heladera: Heladera 1</p>
                            <p>Colaborador: Juan Pérez</p>
                            <p>La temperatura ha excedido los límites permitidos.</p>
                        </div>
                    </a>
                </li>
                <li class="list-item">
                    <a href="#" class="item-card">
                        <h3 class="card-title">Falla de Temperatura</h3>
                        <img src="https://example.com/imagen_incidente.jpg"
                             alt="Imagen del incidente" class="card-image">
                        <div class="card-details">
                            <p>
                                <span class="material-symbols-rounded card-detail-icon">today</span>
                                Fecha: 2024-10-15 10:30
                            </p>
                            <p>Heladera: Heladera 1</p>
                            <p>Colaborador: Juan Pérez</p>
                            <p>La temperatura ha excedido los límites permitidos.</p>
                        </div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
{{/partial}}
{{> templates/base}}