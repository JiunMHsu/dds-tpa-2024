{{#partial "links"}}
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/colaboraciones/tipo_suscripciones.css"/>
    <link
            href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css"
            rel="stylesheet"
    />
{{/partial}}
{{#partial "scripts"}}
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js"></script>
    <script src="/js/map.js"></script>
{{/partial}}
{{#partial "main-content"}}
    <div class="form-container">
        <h2 class="form-title">Suscripción por Falta de Viandas</h2>

        <form action="/heladeras/{{id}}/suscribirse/falta-viandas" method="post" class="form">
            <label class="field-cantidad-viandas">
                Cantidad de Viandas
                <input
                        type="number"
                        min="1"
                        step="1"
                        name="cantidad_viandas"
                        placeholder="Ejemplo: 50"
                        required
                />
            </label>

            <label class="field-medio-notificacion">
                Medio de Notificación
                <select name="medio_notificacion" required>
                    <option value="" disabled selected>Seleccionar</option>
                    <option value="WHATSAPP">WhatsApp</option>
                    <option value="TELEGRAM">Telegram</option>
                    <option value="EMAIL">Email</option>
                </select>
            </label>

            <div class="form-button-container">
                <button type="submit">Aceptar</button>
            </div>
        </form>
    </div>
{{/partial}}
{{#partial "side-panel"}}
    <div id="map"></div>
{{/partial}}
{{> templates/base}}
