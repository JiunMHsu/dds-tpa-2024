{{#partial "title"}}
    Registrar Técnico
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/tecnicos/tecnico_crear.css"/>
    <link
            href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css"
            rel="stylesheet"
    />
{{/partial}}
{{#partial "scripts"}}
{{/partial}}

{{#partial "main-content"}}
    <div class="form-container">
        <h2 class="form-title">Registrar Técnico Nuevo</h2>

        <form action="/tecnicos" method="post" class="form">
            <!-- Columna izquierda -->
            <div class="column">
                <label class="field-usuario">
                    Usuario
                    <input type="text" name="nombre_usuario" placeholder="Nombre de Usuario" required>
                    <input type="password" name="contrasenia" placeholder="Contraseña" required>
                    <input type="email" name="email" placeholder="Email Usuario" required>
                </label>
                <label class="field-nombre">
                    Nombre
                    <input type="text" name="nombre" placeholder="Sonia" required />
                </label>
                <label class="field-apellido">
                    Apellido
                    <input type="text" name="apellido" placeholder="Lopez" required />
                </label>
                <label class="field-tipo-documento">
                    Tipo de Documento
                    <select name="tipo_documento">
                        <option value="" disabled selected>Seleccionar</option>
                        <option value="DNI">DNI</option>
                        <option value="LE">Libreta de Enrolamiento</option>
                        <option value="LC">Libreta Cívica</option>
                    </select>
                </label>
                <label class="field-nro-documento">
                    Número de Documento
                    <input type="text" pattern="[0-9]{8}" name="nro_documento" placeholder="46029384" />
                </label>
                <label class="field-cuit">
                    Cuit
                    <input type="text" name="cuit" pattern="[0-9]{8}" placeholder="27-28033514-8" required />
                </label>
            </div>

            <!-- Columna derecha -->
            <div class="column">
                <label class="field-contacto">
                    Contacto
                    <input type="text" name="email" placeholder="Email">
                    <input type="text" name="telefono" placeholder="Teléfono">
                    <input type="text" name="whatsapp" placeholder="WhatsApp">
                    <input type="text" name="telegram" placeholder="Telegram">
                </label>
                <label class="field-medio-notificacion">
                    Medio de Notificación
                    <select name="medio-notificacion">
                        <option value="" disabled selected>Seleccionar</option>
                        <option value="EMAIL">EMAIL</option>
                        <option value="WHATSAPP">WHATSAPP</option>
                        <option value="TELEGRAM">TELEGRAM</option>
                    </select>
                </label>
                <label class="field-area-de-cobertura">
                    Área de cobertura
                    <input type="number" name="latitud" step="0.00001" placeholder="34.12412" required />
                    <input type="number" name="longitud" step="0.00001" placeholder="-91.18651" required />
                    <input type="number" min="0" step="1" name="radio" placeholder="5000" required />
                    <input type="text" name="barrio" placeholder="Caballito" required />
                </label>
               <div class="form-button-container">
                   <button type="submit">Aceptar</button>
               </div>
            </div>
        </form>
    </div>

{{/partial}}
{{#partial "side-panel"}}
{{/partial}}
