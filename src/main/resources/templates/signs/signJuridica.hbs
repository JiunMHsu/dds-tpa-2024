{{#partial "title"}}
    Sign Up Juridica
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/sign/sign.css"/>
{{/partial}}
{{#partial "main-content"}}
    <img src="img/Map.png" class="main-section">
    <div class="form-container">
        <div class="form-title">
                    Sign Up Juridica
        </div>
        <form action="/save" method="post" class="form">
            <div class="contenedores">
                <div class="izquierda">
                    <input type="hidden" name="tipo_colaborador" value="JURIDICO">
                    <label>
                        <input type="text" name="nombre" placeholder="Nombre" required>
                    </label>
                    <label>
                        <input type="password" name="contrasenia" placeholder="Contraseña" required>
                    </label>
                    <label>
                        <input type="email" name="email" placeholder="Email Usuario" required>
                    </label>
                    <label>
                        <select name="razon_social" required>
                                <option value="" disabled selected>Tipo de Razon Social</option>
                                <option value="GUBERNMENTAL">Gubernamental</option>
                                <option value="ONG">Ong</option>
                                <option value="EMPRESA">Empresa</option>
                                <option value="INSTITUCION">Institucion</option>
                    </label>
                </div>
                <div class="centro">
                    <label>
                        <input type="text" name="barrio" placeholder="Barrio" required>
                    </label>
                    <label>
                        <input type="text" name="calle" placeholder="Calle" required>
                    </label>
                    <label>
                        <input type="number" name="altura" placeholder="Altura" required>
                    </label>
                    <label>
                        <input type="text" name="latitud" placeholder="Latitud" required>
                    </label>
                    <label>
                        <input type="text" name="longitud" placeholder="Longitud" required>
                    </label>
                    <label>
                        <select name="tipo_contacto" required>
                                <option value="" disabled selected>Tipo de Contacto</option>
                                <option value="email">Email</option>
                                <option value="telefono">Telefono</option>
                                <option value="whatsapp">Whatsapp</option>
                                <option value="telegram">Telegram</option>
                    </label>
                </div>
                <div class="derecha">
                      <label for="colaboraciones">Colaboraciones:</label>
                             <div class="form-button-container">
                                  <button type="submit" value="DONACION_DINERO">Donación de Dinero</button>
                             </div>
                             <div class="form-button-container">
                                  <button type="submit" value="HACERSE_CARGO_HELADERA">Hacerse Cargo de Heladera</button>
                             </div>
                             <div class="form-button-container">
                                    <div class="ajuste">
                                                               <button type="submit" >Guardar</button>
                                    </div>
                             </div>
                </div>
       </form>
    </div>
{{/partial}}
{{> templates/base_plain}}

