{{#partial "title"}}
    Sign Up Humana
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/sign/sign.css"/>
{{/partial}}

{{#partial "main-content"}}
    <img src="/img/Map.png" class="main-section" alt="">

    <div class="form-container">
        <div class="form-title">
            Sign Up Humana
        </div>
        <form action="/signup/humana" method="post" class="form">
            <div class="contenedores">
                <div class="izquierda">
                    <input type="hidden" name="tipo_colaborador" value="HUMANA">
                    <label>
                        <input type="text" name="nombre_usuario" placeholder="Nombre de Usuario" required>
                    </label>
                    <label>
                        <input type="password" name="contrasenia" placeholder="Contraseña" required>
                    </label>
                    <label>
                        <input type="email" name="email" placeholder="Email Usuario" required>
                    </label>
                    <label>
                        <input type="text" name="nombre" placeholder="Nombre" required>
                    </label>
                    <label>
                        <input type="text" name="apellido" placeholder="Apellido" required>
                    </label>
                    <label>
                        <input type="date" name="fecha_nacimiento" required>
                    </label>
                </div>
                <div class="centro">
                    <label>
                        <input type="text" name="barrio" placeholder="Barrio" required>
                    </label>
                    <label>
                        <input type="text" name="calle" placeholder="Calle" required>
                    </label>
                    <label>
                        <input type="number" name="altura" placeholder="Altura" required>
                    </label>
                    <label>
                            <select name="tipo_contacto" required>
                                <option value="" disabled selected>Tipo de Contacto</option>
                                <option value="email">Email</option>
                                <option value="telefono">Teléfono</option>
                                <option value="whatsapp">Whatsapp</option>
                                <option value="telegram">Telegram</option>
                            </select>
                    </label>
                        <label>
                            <input type="text" name="info_contacto" placeholder="Información de Contacto" required>
                        </label>
                </div>
                <div class="derecha">
                    <label for="colaboraciones">Colaboraciones:</label>
                    <div class="form-button-container">
                        <button type="submit" value="DONACION_DINERO">Donación de Dinero</button>
                    </div>
                    <div class="form-button-container">
                        <button type="submit" value="DONACION_VIANDAS">Donación de Viandas</button>
                    </div>
                    <div class="form-button-container">
                        <button type="submit" value="DISTRIBUCION_VIANDAS">Distribución de Viandas</button>
                    </div>
                    <div class="form-button-container">
                        <button type="submit" value="ENTREGA_VIANDA">Entregar Viandas</button>
                    </div>
                    <div class="form-button-container">
                        <button type="submit" value="REPARTO_DE_TARJETAS">Reparto de Tarjetas</button>
                    </div>
                    <div class="form-button-container">
                        <div class="ajuste">
                            <button type="submit">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{{/partial}}
{{> templates/base_plain}}
