{{#partial "title"}}
    Fallas Técnicas
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/list.css"/>
    <link rel="stylesheet" href="/css/incidentes/fallas_tecnicas.css"/>
{{/partial}}
{{#partial "scripts"}}
{{/partial}}
{{#partial "main-content"}}
    <div class="list-container">
        <h2 class="list-title">Fallas Técnicas</h2>

        <div class="filter-container">
            <div class="filter">FILTROS</div>
            <!-- TODO - Implementar filtros por resuelto y no -->
            <!-- barra de búsqueda y filtros -->
            <!-- filtro: resueltas, pendientes, todas -->
        </div>

        <div class="scrollable">
            <ul class="list">
                {{#each fallas}}
                    <li class="list-item">
                        <a href="/fallas-tecnicas/{{this.id}}" class="item-card">
                            <h3 class="card-title"> {{this.heladera}} </h3>
                            <div class="content-wrapper">
                                <img src="/image/{{this.foto}}" alt="foto-falla"
                                     class="falla-image">
                                <div class="description">
                                    <p>
                                        <span class="material-symbols-rounded card-detail-icon"> today </span>
                                        Fecha y Hora: {{this.fecha}} {{this.hora}}
                                    </p>
                                    <p class="estado"
                                        {{#if this.resuelto}}
                                       style="color: #A7C957"
                                        {{else}}
                                       style="color: #e37f8f"
                                        {{/if}}>
                                        <span class="material-symbols-rounded card-detail-icon"> radio_button_checked </span>
                                        Estado:
                                        {{#if this.resuelto}} Resuelto {{else}} Pendiente {{/if}}
                                    </p>
                                </div>
                            </div>
                        </a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
{{/partial}}
{{#partial "side-panel"}}
{{/partial}}
{{> templates/base}}
