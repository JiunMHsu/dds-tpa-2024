{{#partial "tittle"}}
    Alertas
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/list.css"/>
    <link rel="stylesheet" href="/css/incidentes/alertas.css"/>
{{/partial}}
{{#partial "scripts"}}
{{/partial}}
{{#partial "main-content"}}
    <div class="list-container">
        <h2 class="list-title">Alertas</h2>

        <div class="scrollable">
            <ul class="list">
                {{#each alertas}}
                    <li class="list-item">
                        <a href="/alertas/{{this.id}}" class="item-card">
                            <h3 class="card-title">{{this.tipo}}</h3>
                            <div class="card-details">
                                <p>
                                    <span class="material-symbols-rounded card-detail-icon">kitchen</span>
                                    Heladera: {{this.heladera}}
                                </p>
                                <p>
                                    <span class="material-symbols-rounded card-detail-icon">today</span>
                                    Fecha: {{this.fecha}}
                                </p>
                                <p>
                                    <span class="material-symbols-rounded card-detail-icon">schedule</span>
                                    Hora: {{this.hora}}
                                </p>
                                <p class="estado"
                                    {{#if this.resuelto}}
                                   style="color: #A7C957"
                                    {{else}}
                                   style="color: #e37f8f"
                                    {{/if}}>
                                    <span class="material-symbols-rounded card-detail-icon"> radio_button_checked </span>
                                    Estado:
                                    {{#if this.resuelto}} Resuelto {{else}} Pendiente {{/if}}
                                </p>
                            </div>
                        </a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
{{/partial}}
{{> templates/base}}