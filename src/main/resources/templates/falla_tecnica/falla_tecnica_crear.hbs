{{#partial "title"}}
    Reportar Falla
{{/partial}}
{{#partial "links"}}
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/incidentes/falla_tecnica_crear.css"/>
    <link
            href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css"
            rel="stylesheet"
    />
{{/partial}}
{{#partial "scripts"}}
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js"></script>
    <script src="/js/map.js"></script>
{{/partial}}
{{#partial "main-content"}}
    <div class="redirect-container">
        <h3 class="redirect-title">Fallas Tecnicas</h3>
        <div class="redirect-button-container">
            <a href="/fallas-tecnicas" class="redirect-button">Ver Todas</a>
        </div>
    </div>
    <div class="divider"></div>
    <div class="form-container">
        <h2 class="form-title">Reportar Falla Tecnica</h2>

        <form action="/fallas-tecnicas" method="post" class="form" enctype="multipart/form-data">
            <label class="field-nombre">
                Nombre
                <input
                        type="text"
                        name="nombre"
                        placeholder="Heladera Medrano UTN"
                        required
                />
            </label>
            <label class="field-descripcion">
                Descripci√≥n
                <textarea type="text" name="descripcion" required></textarea>
            </label>
            <label class="field-imagen">
                Imagen
                <input type="file" name="imagen" accept=".png, .jpg, .jpeg" required/>
            </label>

            <div class="form-button-container">
                <button type="submit">Reportar</button>
            </div>
        </form>
    </div>
{{/partial}}
{{#partial "side-panel"}}
    <div id="map"></div>
{{/partial}}
{{> templates/base}}